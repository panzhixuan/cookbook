<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maintypepage"
    android:background="@drawable/background">
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:background="@color/halfOrigin" android:layout_height="0dp" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_gravity="center" android:layout_weight="0.5">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="菜式"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="菜系" android:layout_marginLeft="50dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="场合" android:layout_marginLeft="50dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="0dp" android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="5">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_gravity="center">

    <Button android:id="@+id/button00" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="清淡" />

    <Button android:id="@+id/button01" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="川菜" android:layout_marginRight="25dp" android:layout_marginLeft="25dp"/>

    <Button android:id="@+id/button02" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="家" />

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_gravity="center">

    <Button android:id="@+id/button10" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="辣" />

    <Button android:id="@+id/button11" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="淮扬菜" android:layout_marginRight="25dp" android:layout_marginLeft="25dp"/>

    <Button android:id="@+id/button12" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="饭店" />

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_gravity="center">

    <Button android:id="@+id/button20" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="酸" />

    <Button android:id="@+id/button21" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="徽菜" android:layout_marginRight="25dp" android:layout_marginLeft="25dp"/>

    <Button android:id="@+id/button22" android:background="@drawable/caishi_shape" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="快餐店" />

</LinearLayout>

</LinearLayout>


    <LinearLayout android:layout_height="0dp" android:layout_width="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:layout_weight="1" android:layout_marginBottom="0dp">

    <Button android:id="@+id/reset" android:background="@color/transparent70" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="重置"/>

    <Button android:id="@+id/confirm" android:background="@color/transparent70" android:layout_height="50dp" android:layout_width="90dp" android:textSize="20dp" android:text="确认" android:layout_marginLeft="50dp"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>
